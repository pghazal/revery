<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- this remove the white screen on start up-->
        <item name="android:windowDisablePreview">true</item>

        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>

        <item name="android:buttonStyle">@style/ReveryButton</item>
    </style>

    <style name="Theme.Activity.FullScreen" parent="@style/AppTheme">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/color_main_background_view</item>

        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="ReveryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="ReveryRecurringDaysToggle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_toggle_recurring_day</item>
    </style>

    <style name="ReveryRecurringDaysText">
        <item name="android:textColor">@color/selector_recurring_days_alarm_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReveryBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ReveryBottomSheet</item>
    </style>

    <style name="ReveryBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ReveryShapeAppearanceBottomSheetDialog</item>
        <item name="backgroundTint">@color/color_main_background_view</item>
    </style>

    <style name="ReveryShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ReveryLabel">
        <item name="android:textColor">@color/color_text_static_label</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="fab_extended_music_menu_button">
        <item name="iconTint">@android:color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:elevation">16dp</item>
    </style>

</resources>