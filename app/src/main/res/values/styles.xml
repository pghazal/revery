<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- this remove the white screen on start up-->
        <item name="android:windowDisablePreview">true</item>

        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RecurringDaysToggleStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_toggle_recurring_day</item>
    </style>

    <style name="RecurringDaysTextStyle">
        <item name="android:textColor">@color/selector_recurring_days_alarm_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>