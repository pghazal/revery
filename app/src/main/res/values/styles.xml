<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- this remove the white screen on start up-->
        <!--<item name="android:windowDisablePreview">true</item>-->

        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>

        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>

        <item name="android:buttonStyle">@style/ReveryButton</item>
        <item name="buttonStyle">@style/ReveryButton</item>
        <item name="imageButtonStyle">@style/ReveryImageButton</item>
        <item name="android:imageButtonStyle">@style/ReveryImageButton</item>

        <item name="chipStyle">@style/ReveryChip</item>

        <item name="tabStyle">@style/ReveryTabLayout</item>
    </style>

    <style name="Theme.Activity.FullScreen" parent="@style/AppTheme">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>

        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="ReveryImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/shape_button_circled_corner</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ReveryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/shape_button_circled_corner</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ReveryButtonBorderless" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ReveryRadioButton" parent="ReveryToggle">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/selector_toggle</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="ReveryRecurringDaysToggle" parent="ReveryToggle">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ReveryToggle">
        <item name="android:textColor">@color/selector_toggle_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/selector_toggle</item>
        <item name="android:drawablePadding">@dimen/minimum_base_margin</item>
        <item name="android:drawableTint">@color/selector_toggle_text_color</item>
        <item name="drawableTint">@color/selector_toggle_text_color</item>
        <item name="android:padding">@dimen/third_base_margin</item>
    </style>

    <style name="ReveryRecurringDaysText">
        <item name="android:textColor">@color/selector_recurring_days_alarm_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReveryBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ReveryBottomSheet</item>
        <item name="android:windowAnimationStyle">@style/Animation.ReveryBottomSheetDialog</item>
    </style>

    <style name="Animation.ReveryBottomSheetDialog" parent="Animation.MaterialComponents.BottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_exit_anim</item>
    </style>

    <style name="ReveryBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ReveryShapeAppearanceBottomSheetDialog</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="ReveryShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ReverySettingsLabel">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ReveryLabel">
        <item name="android:textColor">@color/color_text_static_label</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ReverySpinnerTheme">
        <item name="android:colorBackground">@color/color_main_background_view</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorTertiary">@android:color/white</item>
        <item name="android:textColorPrimaryDisableOnly">@android:color/white</item>
    </style>

    <style name="ReveryChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/selector_toggle_text_color</item>
        <item name="android:textAppearance">@style/ReveryChipText</item>
        <item name="chipBackgroundColor">@color/selector_chip_background_color</item>
        <item name="chipIconTint">@android:color/white</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="ReveryChipText" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ReveryFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:tint">@android:color/white</item>
        <item name="tint">@android:color/white</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="ReveryExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="iconTint">@android:color/white</item>
        <item name="iconPadding">12dp</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>

        <item name="extendMotionSpec">@animator/mtrl_extended_fab_change_size_expand_motion_spec
        </item>
        <item name="shrinkMotionSpec">@animator/mtrl_extended_fab_change_size_collapse_motion_spec
        </item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="ReveryTabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabTextAppearance">@style/ReveryChipText</item>
    </style>

    <style name="SlideToActTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>