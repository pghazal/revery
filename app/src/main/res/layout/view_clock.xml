<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/timeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@android:color/white"
            android:textSize="60sp"
            app:fontFamily="@font/montserrat_semi_bold"
            tools:text="15:40" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/amPmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/half_base_margin"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:visibility="gone"
            app:fontFamily="@font/montserrat_semi_bold"
            tools:text="@string/am"
            tools:visibility="visible" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeContainer"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        tools:text="Mercredi, 14 Octobre" />

</RelativeLayout>